<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=System.Runtime">
    <system:Double x:Key="BorderRadius">5</system:Double>
    <CornerRadius x:Key="CornerRadius" BottomLeft="{StaticResource BorderRadius}" BottomRight="{StaticResource BorderRadius}" 
                  TopLeft="{StaticResource BorderRadius}" TopRight="{StaticResource BorderRadius}"/>
</ResourceDictionary>