<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:controls="clr-namespace:ThemeCommons.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/ThemeCommons;component/Styles/Colors.xaml"/> <!--must be first item-->
        <ResourceDictionary Source="pack://application:,,,/ThemeCommons;component/Styles/Variables.xaml"/><!--must be second item-->
        <!---Controls-->
        <ResourceDictionary Source="pack://application:,,,/ThemeCommons;component/Styles/Button.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/ThemeCommons;component/Styles/TextBox.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/ThemeCommons;component/Styles/TabItem.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/ThemeCommons;component/Styles/Titlebar.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/ThemeCommons;component/Styles/Window.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:DefaultWindow}" BasedOn="{StaticResource DefaultWindow}"/>
    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource DefaultButton}"/>
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource ThemeCommonsDefaultTextBox}"/>
</ResourceDictionary>